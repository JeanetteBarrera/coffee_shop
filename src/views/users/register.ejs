<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/style.css">
    <title>Home</title>
</head>

<body class="home">

    <!-- header section starts -->
    <header class="header">
        <a href="/" class="logo">
            <img src="/images/Group-42.svg" alt="">
        </a>

        <nav class="navbar">
            <a href="#home">home</a>
            <a href="#about">about</a>
            <a href="#menu">menu</a>
            <a href="#products">products</a>
            <a href="#contact">contact</a>
            <a class="mobile-login" href="/">Mi cuenta</a>
        </nav>

        <div class="icons">
            <i class="fas fa-search" id="search-btn"></i>
            <i class="fas fa-shopping-cart" id="cart-btn"></i>
            <i class="fas fa-user" id="user-btn"></i>
            <i class="fas fa-bars" id="menu-btn"></i>
        </div>

        <div class="search-form">
            <input type="search" id="search-box" placeholder="search here...">
            <label for="search-box" class="fas fa-search"></label>
        </div>

        <div class="cart-container">
            <h3 class="title">Your products</h3>

            <div class="cart-item">
                <span class="fas fa-times"></span>
                <img src="/images/pexels-juan-pablo-serrano-arenas-894695.jpg" alt="">
                <div class="content">
                    <h3>cart item 01</h3>
                    <div class="price">$15.99/-</div>
                </div>
            </div>
            <div class="cart-item">
                <span class="fas fa-times"></span>
                <img src="/images/pexels-juan-pablo-serrano-arenas-894695.jpg" alt="">
                <div class="content">
                    <h3>cart item 01</h3>
                    <div class="price">$15.99/-</div>
                </div>
            </div>
            <div class="cart-item">
                <span class="fas fa-times"></span>
                <img src="/images/pexels-juan-pablo-serrano-arenas-894695.jpg" alt="">
                <div class="content">
                    <h3>cart item 01</h3>
                    <div class="price">$15.99/-</div>
                </div>
            </div>
            <div class="cart-puy">
                <span>Subtotal:</span>
                <span>$5000</span>
                <a class="" href="/">Purchase</a>
            </div>
        </div>
    </header>
    <!-- header section ends -->

    <!-- home section stars -->
    <main class="userForm" id="userForms">
        <form class="form-container" action="/users/register" method="POST">
            <h3>Register</h3>
            <div>
                <label for="name">name</label>
                <input type="text" name="name" placeholder="name" id="name" value="<%= locals.old && old.name %>">
                <% if (typeof errors != "undefined" && errors.name) { %>
                    <span class="text-danger"><%= errors.name.msg %> </span>
                <% } %>
            </div>
            <div>
                <label for="lastname">lastname</label>
                <input type="text" name="lastname" placeholder="lastname" id="lastname" value="<%= locals.old && old.lastname %>">
                <% if (typeof errors != "undefined" && errors.lastname) { %>
                    <span class="text-danger"><%= errors.lastname.msg %> </span>
                <% } %>
            </div>
            <div>
                <label for="email">email</label>
                <input type="email" name="email" placeholder="email" id="email" value="<%= locals.old && old.email %>">
                <% if (typeof errors != "undefined" && errors.email) { %>
                    <span class="text-danger"><%= errors.email.msg %> </span>
                <% } %>
            </div>
            <div>
                <label for="password">password</label>
                <input type="password" name="password" placeholder="password" id="password" >
                <% if (typeof errors != "undefined" && errors.password) { %>
                    <span class="text-danger"><%= errors.password.msg %> </span>
                <% } %>
            </div>
            <div>
                <label for="password2">password</label>
                <input type="password" name="password2" placeholder="confirme password" id="password2">
                <% if (typeof errors != "undefined" && errors.password2) { %>
                    <span class="text-danger"><%= errors.password2.msg %> </span>
                <% } %>
            </div>

            <button type="submit">register</button>
        </form>

    </main>
    <!-- home section ends -->


    <script src="/js/header.js"></script>
</body>

</html>