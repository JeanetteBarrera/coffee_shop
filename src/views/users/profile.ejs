<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/style.css">
    <title>Home</title>
</head>

<body class="home">

    <!-- header section starts -->
    <header class="header">
        <a href="/" class="logo">
            <img src="/images/Group-42.svg" alt="">
        </a>

        <nav class="navbar">
            <a href="#home">home</a>
            <a href="#about">about</a>
            <a href="#menu">menu</a>
            <a href="#products">products</a>
            <a href="#contact">contact</a>
            <a class="mobile-login" href="/">Mi cuenta</a>
        </nav>

        <div class="icons">
            <i class="fas fa-search" id="search-btn"></i>
            <i class="fas fa-shopping-cart" id="cart-btn"></i>
            <i class="fas fa-user" id="user-btn"></i>
            <i class="fas fa-bars" id="menu-btn"></i>
        </div>

        <div class="search-form">
            <input type="search" id="search-box" placeholder="search here...">
            <label for="search-box" class="fas fa-search"></label>
        </div>

        <div class="cart-container">
            <h3 class="title">Your products</h3>

            <div class="cart-item">
                <span class="fas fa-times"></span>
                <img src="/images/pexels-juan-pablo-serrano-arenas-894695.jpg" alt="">
                <div class="content">
                    <h3>cart item 01</h3>
                    <div class="price">$15.99/-</div>
                </div>
            </div>
            <div class="cart-item">
                <span class="fas fa-times"></span>
                <img src="/images/pexels-juan-pablo-serrano-arenas-894695.jpg" alt="">
                <div class="content">
                    <h3>cart item 01</h3>
                    <div class="price">$15.99/-</div>
                </div>
            </div>
            <div class="cart-item">
                <span class="fas fa-times"></span>
                <img src="/images/pexels-juan-pablo-serrano-arenas-894695.jpg" alt="">
                <div class="content">
                    <h3>cart item 01</h3>
                    <div class="price">$15.99/-</div>
                </div>
            </div>
            <div class="cart-puy">
                <span>Subtotal:</span>
                <span>$5000</span>
                <a class="" href="/">Purchase</a>
            </div>
        </div>
    </header>
    <!-- header section ends -->

    <!-- home section stars -->
    <main class="profile" id="userForms">
        <form class="form_container" action="/users/profile/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <h3>
                Welcome
            </h3>
            <div class="container_img">

                <img src="/images/avatars/<%= user.avatar %>" alt="">

                <div class="avatar_edit">
                    <input name="avatar" type='file' id="imageUpload" accept=".png, .jpg, .jpeg" />
                    <label for="imageUpload" class="fas fa-pencil-alt"></label>
                </div>
            </div>
            <div class="box_1">
                <div>
                    <label for="name">name</label>
                    <input type="text" name="name" placeholder="name" id="name" value="<%= user.name %>">
                    <% if (typeof errors !="undefined" && errors.name) { %>
                        <span class="text-danger">
                            <%= errors.name.msg %>
                        </span>
                        <% } %>
                </div>
                <div>
                    <label for="lastname">lastname</label>
                    <input type="text" name="lastname" placeholder="lastname" id="lastname"
                        value="<%= user.lastname%>">
                    <% if (typeof errors !="undefined" && errors.lastname) { %>
                        <span class="text-danger">
                            <%= errors.lastname.msg %>
                        </span>
                        <% } %>
                </div>
                <div class="extra_info">
                    <a href="/">mis favoritos</a>
                    <a href="/">mis compras</a>
                </div>

            </div>
            <div>
                <label for="email">email</label>
                <input type="email" name="email" placeholder="email" id="email" value="<%= user.email%>">
                <% if (typeof errors !="undefined" && errors.email) { %>
                    <span class="text-danger">
                        <%= errors.email.msg %>
                    </span>
                    <% } %>
            </div>
            <div>
                <label>password</label>
                <input type="password" name="password" value="<%= user.password %>" disabled>
            </div>
            <div>
                <label for="city">city</label>
                <input type="text" name="city" placeholder="city" id="city" value="<%= user.city%>">
                <% if (typeof errors !="undefined" && errors.city) { %>
                    <span class="text-danger">
                        <%= errors.city.msg %>
                    </span>
                    <% } %>
            </div>
            <div>
                <label for="phone">phone</label>
                <input type="number" name="phone" placeholder="phone" id="phone" value="<%= user.phone%>">
                <% if (typeof errors !="undefined" && errors.phone) { %>
                    <span class="text-danger">
                        <%= errors.phone.msg %>
                    </span>
                    <% } %>
            </div>
            <div>
                <label for="zipCode">zipCode</label>
                <input type="number" name="zipCode" placeholder="zipCode" id="zipCode" value="<%= user.zipCode %>">
                <% if (typeof errors !="undefined" && errors.zipCode) { %>
                    <span class="text-danger">
                        <%= errors.zipCode.msg %>
                    </span>
                    <% } %>
            </div>
            <div>
                <label for="address">address</label>
                <input type="text" name="address" placeholder="address" id="address" value="<%= user.address %>">
                <% if (typeof errors !="undefined" && errors.address) { %>
                    <span class="text-danger">
                        <%= errors.address.msg %>
                    </span>
                    <% } %>
            </div>

            <button type="submit">save</button>
        </form>

    </main>
    <!-- home section ends -->


    <script src="/js/header.js"></script>
</body>

</html>